{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "include": [
    "global/index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/.*"
  ]
}